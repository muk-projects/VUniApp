<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/fragment_certificates_certdetails_university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fragment_certificates_certdetails_course"
        android:layout_below="@+id/fragment_certificates_certdetails_course"
        android:gravity="right"
        android:text="@string/fragment_certificates_certdetails_university"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/fragment_certificates_certdetails_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tableLayout1"
        android:layout_alignRight="@+id/fragment_certificates_certdetails_university"
        android:gravity="right"
        android:text="@string/fragment_certificates_certdetails_grade"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/fragment_certificates_certdetails_coursenr"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/fragment_certificates_certdetails_coursenr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_certificates_certdetails_coursenr"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/fragment_certificates_certdetails_stnr"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/fragment_certificates_certdetails_stnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_certificates_certdetails_stnr"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/fragment_certificates_certdetails_date"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/fragment_certificates_certdetails_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_certificates_certdetails_date"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/fragment_certificates_certdetails_professor"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/fragment_certificates_certdetails_professor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_certificates_certdetails_professor"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/fragment_certificates_certdetails_hours"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/fragment_certificates_certdetails_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_certificates_certdetails_hours"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/fragment_certificates_certdetails_ects"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/fragment_certificates_certdetails_ects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_certificates_certdetails_ects"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/fragment_certificates_certdetails_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="@string/fragment_certificates_certdetails_course"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>